generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "sqlite"
    url = env("DATABASE_URL")
}
model Tag{
    id Int @id @unique @default(autoincrement())
    name String 
    posts TagsOnPosts[]
}
model Post{
    id Int @id @unique @default(autoincrement())
    name String 
    description String
    img String?
    // likes User[] @relation(name:"likesToPost")
    tags TagsOnPosts[]
    createdBy User @relation(fields: [userId], references: [id])
    userId Int

    likesToPosts likesToPost[]
}
model User{
    id Int @id @unique @default(autoincrement())
    firstName String 
    secondName String?
    password String
    avatar String? @unique
    email String @unique
    isAdmin Boolean @default(false)
    // likes Post[] @relation(name:"likesToPost")

    createdPosts Post[]

    likesToPosts likesToPost[]
}
model TagsOnPosts{
    post Post @relation(fields: [postId], references: [id])
    postId Int
    relationWithTag Tag @relation(fields: [tagId], references: [id])
    tagId Int
    @@id([postId,tagId])
}
model likesToPost{
    post Post @relation(fields: [postId], references: [id])
    postId Int
    user User @relation(fields: [userId], references: [id])
    userId Int
    @@id([postId,userId])
}